# Hydia Backend Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Supabase Configuration
# Serveur / URLs / CORS
FRONTEND_URL=http://localhost:8080
BACKEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3001,http://localhost:3000,http://localhost:8082,http://localhost:8080
SESSION_COOKIE_DOMAIN=localhost
LOG_LEVEL=debug


# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Security Configuration
BCRYPT_ROUNDS=12
ENCRYPTION_KEY=your-32-character-encryption-key-here


# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png,gif

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# URLs
FRONTEND_URL=http://localhost:3001
BACKEND_URL=http://localhost:3000

# Session/Cookies
SESSION_COOKIE_NAME=hydia_sess
SESSION_COOKIE_DOMAIN=localhost
SESSION_SECRET=please-change-this-to-a-32-bytes-min-secret

# Feature Flags
FEATURE_DOCUMENTS=false

# MCP Config
SUPABASE_MCP_CONFIG=./supabase/mcp_ids.json

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Redis Configuration (Optional for caching)
REDIS_URL=redis://localhost:6379

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-here
